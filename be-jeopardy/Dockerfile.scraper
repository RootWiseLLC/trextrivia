FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy scraper scripts
COPY scrapers/ ./scrapers/
COPY insert_clues.py .
COPY add_alternatives.py .
COPY scrape.sh .

# Create directory for scraped data
RUN mkdir -p clues

# Make script executable
RUN chmod +x scrape.sh

# Entry point - can override with docker run args
ENTRYPOINT ["./scrape.sh"]
CMD ["jeopardy"]
